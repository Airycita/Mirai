{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "declaration": true,
        "composite": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,
        "typeRoots": [
            "node_modules/@types",
            "main.d.ts"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "main": ["src/main", "dist/main"],
            "@types": ["main"]
        }
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "./**/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "utils"
    ]
  }